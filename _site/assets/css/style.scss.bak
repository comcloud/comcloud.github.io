/* ==========================================================================
   响应式优化
   ========================================================================== */

@media (max-width: 1024px) {
  .hero-container {
    gap: var(--space-6);
  }
  
  .hero-left .hero-icon {
    width: 60px;
    height: 60px;
    font-size: 1.5rem;
  }
  
  .content-section {
    padding: var(--space-12) 0;
  }
}

@media (max-width: 768px) {
  .hero {
    padding: var(--space-16) 0 var(--space-12);
  }
  
  .hero-right {
    .hero-title {
      font-size: var(--text-3xl);
    }
    
    .hero-subtitle {
      font-size: var(--text-lg);
    }
    
    .hero-actions {
      flex-direction: column;
      gap: var(--space-3);
      
      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  }
  
  .content-section {
    padding: var(--space-8) 0;
  }
  
  .section-title {
    font-size: var(--text-2xl);
  }
  
  .card {
    padding: var(--space-4);
  }
  
  .stats-section {
    padding: var(--space-8) 0;
    margin: var(--space-12) 0;
  }
}

@media (max-width: 480px) {
  .hero {
    padding: var(--space-12) 0 var(--space-8);
  }
  
  .hero-right .hero-title {
    font-size: var(--text-2xl);
  }
  
  .content-section {
    padding: var(--space-6) 0;
  }
  
  .grid {
    gap: var(--space-4);
  }
  
  .card {
    padding: var(--space-4);
  }
  
  .btn {
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
  }
}

/* ==========================================================================
   动画增强
   ========================================================================== */

/* 页面加载动画 */
.fade-in-stagger > * {
  animation: fadeInUp 0.6s ease-out both;
  animation-delay: calc(var(--stagger-delay, 0) * 0.1s);
}

/* 滚动触发动画 */
.animate-on-scroll {
  opacity: 0;
  transform: translateY(30px);
  transition: all 0.8s ease-out;
  
  &.animate {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 悬停动画增强 */
.hover-lift {
  transition: all var(--transition-base);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
}

.hover-scale {
  transition: transform var(--transition-base);
  
  &:hover {
    transform: scale(1.05);
  }
}

/* 焦点状态 */
.focus-ring {
  &:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
  }
}
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-base);
  flex-shrink: 0;
  color: var(--text-inverse);
}

.contact-text {
  display: flex;
  flex-direction: column;
  
  .contact-label {
    font-size: var(--text-xs);
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .contact-value {
    font-size: var(--text-sm);
    color: var(--text-primary);
    font-weight: 500;
    margin-top: 2px;
  }
}

/* Articles page specific styles */
.articles-hero {
  background: var(--gradient-tech);
  color: var(--text-inverse);
}

.articles-content {
  padding: var(--space-3xl) 0;
}

.articles-list {
  margin-bottom: var(--space-3xl);
}

.category-section {
  margin-bottom: var(--space-3xl);
  
  &:last-child {
    margin-bottom: 0;
  }
}

.category-header {
  padding: var(--space-lg);
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  margin-bottom: var(--space-md);
  cursor: pointer;
  transition: all var(--transition-fast);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid var(--border-light);
  
  &:hover {
    background: var(--bg-tertiary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
  }
}

.category-info {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  
  h3 {
    margin: 0;
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .category-icon {
    font-size: var(--text-lg);
  }
}

.article-count {
  background: var(--primary-color);
  color: var(--text-inverse);
  padding: var(--space-xs) var(--space-sm);
  border-radius: var(--radius-full);
  font-size: var(--text-xs);
  font-weight: 600;
}

.toggle-icon {
  transition: transform var(--transition-base);
  color: var(--text-muted);
  
  &.expanded {
    transform: rotate(180deg);
  }
}

.articles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: var(--space-lg);
  overflow: hidden;
  transition: all var(--transition-slow);
  
  @media (min-width: 768px) {
    gap: var(--space-xl);
  }
  
  &.collapsed {
    max-height: 0;
    opacity: 0;
    margin-top: 0;
  }
  
  &.expanded {
    max-height: 2000px;
    opacity: 1;
    margin-top: var(--space-md);
  }
}

.article-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  border: 1px solid var(--border-light);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }
  
  .card-header {
    padding: var(--space-lg);
    border-bottom: 1px solid var(--border-light);
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--bg-secondary);
    
    .card-icon {
      width: 40px;
      height: 40px;
      border-radius: var(--radius-lg);
      background: var(--gradient-primary);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: var(--text-lg);
      color: var(--text-inverse);
    }
    
    .card-meta {
      display: flex;
      gap: var(--space-xs);
      
      .article-type,
      .article-category {
        padding: 2px var(--space-xs);
        border-radius: var(--radius-sm);
        font-size: var(--text-xs);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      
      .article-type {
        background: var(--accent-color);
        color: var(--text-inverse);
      }
      
      .article-category {
        background: var(--bg-tertiary);
        color: var(--text-muted);
      }
    }
  }
  
  .card-body {
    padding: var(--space-lg);
    
    h3 {
      margin: 0 0 var(--space-sm);
      font-size: var(--text-lg);
      font-weight: 600;
      color: var(--text-primary);
      
      a {
        color: inherit;
        text-decoration: none;
        
        &:hover {
          color: var(--primary-color);
        }
      }
    }
    
    p {
      margin: 0 0 var(--space-md);
      color: var(--text-secondary);
      font-size: var(--text-sm);
      line-height: 1.6;
    }
  }
  
  .card-footer {
    padding: var(--space-md) var(--space-lg);
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-light);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
}

.read-article-btn {
  background: var(--primary-color);
  color: var(--text-inverse);
  padding: var(--space-xs) var(--space-md);
  border-radius: var(--radius-lg);
  text-decoration: none;
  font-size: var(--text-sm);
  font-weight: 500;
  transition: all var(--transition-fast);
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
  
  &:hover {
    background: var(--primary-dark);
    text-decoration: none;
    color: var(--text-inverse);
    transform: translateY(-1px);
  }
  
  &::after {
    content: '→';
    transition: transform var(--transition-fast);
  }
  
  &:hover::after {
    transform: translateX(2px);
  }
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-xs);
  
  .tag {
    background: var(--bg-tertiary);
    color: var(--text-muted);
    padding: 2px var(--space-xs);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    text-decoration: none;
    transition: all var(--transition-fast);
    
    &:hover {
      background: var(--primary-color);
      color: var(--text-inverse);
    }
  }
}

/* Navigation section */
.navigation-section {
  padding: var(--space-3xl) 0;
  background: var(--bg-secondary);
}

.nav-container {
  max-width: var(--container-lg);
  margin: 0 auto;
  padding: 0 var(--space-lg);
  
  h2 {
    text-align: center;
    margin-bottom: var(--space-xl);
    color: var(--text-primary);
  }
}

.nav-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: var(--space-lg);
  
  @media (min-width: 768px) {
    grid-template-columns: repeat(2, 1fr);
  }
}

.nav-card {
  background: var(--bg-primary);
  border-radius: var(--radius-xl);
  padding: var(--space-xl);
  text-decoration: none;
  color: inherit;
  transition: all var(--transition-base);
  border: 1px solid var(--border-light);
  display: flex;
  align-items: center;
  gap: var(--space-lg);
  
  &:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
  }
  
  .nav-icon {
    width: 60px;
    height: 60px;
    border-radius: var(--radius-lg);
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-2xl);
    flex-shrink: 0;
  }
  
  .nav-content {
    flex: 1;
    
    h3 {
      margin: 0 0 var(--space-xs);
      font-size: var(--text-lg);
      color: var(--text-primary);
    }
    
    p {
      margin: 0;
      font-size: var(--text-sm);
      color: var(--text-secondary);
    }
  }
}

/* Stats section */
.stats-section {
  padding: var(--space-2xl) 0;
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  margin-top: var(--space-3xl);
}

/* Loading and error states */
.loading {
  text-align: center;
  padding: var(--space-3xl);
  color: var(--text-muted);
  font-size: var(--text-lg);
}

.error {
  text-align: center;
  padding: var(--space-3xl);
  color: #ef4444;
  font-size: var(--text-lg);
  background: #fef2f2;
  border-radius: var(--radius-lg);
  border: 1px solid #fecaca;
}

.no-articles {
  text-align: center;
  padding: var(--space-3xl);
  color: var(--text-muted);
  font-size: var(--text-lg);
}

/* Responsive enhancements */
@media (max-width: 767px) {
  .articles-grid {
    grid-template-columns: 1fr;
  }
  
  .nav-card {
    flex-direction: column;
    text-align: center;
    
    .nav-icon {
      margin-bottom: var(--space-sm);
    }
  }
  
  .category-header {
    padding: var(--space-md);
    
    .category-info h3 {
      font-size: var(--text-lg);
    }
  }
}

/* ==========================================================================
   文章和博客优化组件
   ========================================================================== */

/* 文章列表优化 */
.post-list, .article-list {
  display: grid;
  gap: var(--space-xl);
}

/* 文章缩略图优化 */
.post-thumbnail {
  aspect-ratio: 16/9;
  overflow: hidden;
  position: relative;
  
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }
  
  .placeholder-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--bg-secondary), var(--bg-tertiary));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-lg);
    color: var(--text-secondary);
    text-align: center;
    padding: var(--space-md);
  }
  
  &:hover img {
    transform: scale(1.05);
  }
}

/* 分页导航优化 */
.pagination {
  margin-top: var(--space-2xl);
  
  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    
    @media (max-width: 640px) {
      flex-direction: column;
    }
  }
  
  .newer-posts, .older-posts {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
    transition: var(--transition);
    
    &:hover {
      color: var(--primary-dark);
      text-decoration: underline;
    }
  }
  
  .page-number {
    color: var(--text-secondary);
    font-size: var(--text-sm);
  }
}

/* ==========================================================================
   动画效果优化
   ========================================================================== */

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.fade-in-up {
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
}

.slide-in-left {
  animation: slideInLeft 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
}

.scale-in {
  animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
}

/* 分阶动画 */
.staggered-animation > * {
  animation-delay: calc(var(--animation-order, 0) * 0.1s);
}

/* ==========================================================================
   优化响应式设计
   ========================================================================== */

/* 精细的断点控制 */
@media (max-width: 480px) {
  .hero-avatar, .hero-icon {
    width: 80px;
    height: 80px;
    font-size: var(--text-2xl);
  }
  
  .hero-actions {
    flex-direction: column;
    
    .btn {
      width: 100%;
    }
  }
  
  .stats {
    flex-direction: column;
    gap: var(--space-md);
  }
}

@media (min-width: 1400px) {
  .grid.grid-3 {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .articles-grid {
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  }
}

/* ==========================================================================
   可访问性优化
   ========================================================================== */

/* 减少动画支持 */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* 焦点样式 */
.btn:focus,
.card:focus,
a:focus {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

/* ==========================================================================
   实用工具类
   ========================================================================== */

.hidden { display: none; }
.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* 滚动条美化 */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-secondary);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
}

/* 选中文本样式 */
::selection {
  background: var(--primary-color);
  color: white;
}

::-moz-selection {
  background: var(--primary-color);
  color: white;
}


